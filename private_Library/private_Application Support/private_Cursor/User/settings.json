{
    "vim.leader": "<Space>",
    "vim.repeat": true,
    "vim.repeatMotion": true,
    "editor.autoIndent": "full",
    "editor.acceptSuggestionOnEnter": "off",
    "vim.surround": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.autoindent": true,
    "vim.expandtab": true,
    "vim.tabstop": 4,
    "vim.shiftwidth": 4,
    "vim.clipboard": "unnamedplus",
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
      {"before": ["j", "j"], "after": ["<Esc>"]}
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {"before": [";"], "after": [":"]},
      {"before": [":"], "after": [";"]},
      {"before": ["<S-h>"], "after": ["^"]},
      {"before": ["<S-l>"], "after": ["$"]},
      {"before": ["j"], "after": ["g", "j"]},
      {"before": ["k"], "after": ["g", "k"]},
      {"before": ["<Tab>"], "after": ["%"]},
      {"before": ["<C-h>"], "after": ["<C-w>", "h"]},
      {"before": ["<C-j>"], "after": ["<C-w>", "j"]},
      {"before": ["<C-k>"], "after": ["<C-w>", "k"]},
      {"before": ["<C-l>"], "after": ["<C-w>", "l"]},

      // コードジャンプ
      {"before": ["<C-o>"], "commands": ["workbench.action.navigateBack"]},
      {"before": ["<C-i>"], "commands": ["workbench.action.navigateForward"]},
      {"before": ["<C-S-o>"], "after": ["<C-o>"]},
      {"before": ["<C-S-i>"], "after": ["<C-i>"]},

      // メソッドジャンプ
      {"before": ["[", "m"], "commands": ["editor.action.previousMethodAction"]},
      {"before": ["]", "m"], "commands": ["editor.action.nextMethodAction"]},

      // 変更箇所ジャンプ
      {"before": ["[", "c"], "commands": ["workbench.action.editor.previousChange"]},
      {"before": ["]", "c"], "commands": ["workbench.action.editor.nextChange"]},

      // エラージャンプ
      {"before": ["[", "e"], "commands": ["editor.action.marker.prev"]},
      {"before": ["]", "e"], "commands": ["editor.action.marker.next"]},

      // 空行追加
      {"before": ["[", "<Space>"], "after": ["O", "<Esc>", "j"]},
      {"before": ["]", "<Space>"], "after": ["o", "<Esc>", "k"]},

      // タグジャンプ
      {"before": ["K"], "commands": ["editor.action.showHover"]},
      {"before": ["g", "j", "K"], "commands": ["editor.action.goToDeclaration"]},
      {"before": ["g", "j", "k"], "commands": ["editor.action.goToTypeDefinition"]},
      {"before": ["g", "j", "i"], "commands": ["editor.action.goToImplementation"]},
      {"before": ["g", "j", "s"], "commands": ["editor.action.goToReferences"]},
      {"before": ["g", "j", "t"], "commands": ["editor.action.goToTest"]},
      {"before": ["<C-k>"], "commands": ["editor.action.referenceSearch.trigger"]},

      // 代替タグジャンプ（元のキーバインドを維持しつつ追加）
      {"before": ["<Space>", "j", "d"], "commands": ["editor.action.goToDeclaration"]},
      {"before": ["<Space>", "j", "t"], "commands": ["editor.action.goToTypeDefinition"]},
      {"before": ["<Space>", "j", "i"], "commands": ["editor.action.goToImplementation"]},
      {"before": ["<Space>", "j", "r"], "commands": ["editor.action.goToReferences"]},
      {"before": ["<Space>", "j", "T"], "commands": ["editor.action.goToTest"]},

      // ショートカット
      {"before": ["<Space>", "a"], "commands": ["workbench.action.showCommands"]},
      {"before": ["<Space>", "G"], "commands": ["editor.action.quickFix"]},
      {"before": ["<Space>", "g", "n"], "commands": ["workbench.action.files.newUntitledFile"]},
      {"before": ["<Space>", "="], "commands": ["editor.action.formatDocument"]},
      {"before": ["<Space>", "o"], "commands": ["workbench.action.gotoSymbol"]},
      {"before": ["<Space>", "q"], "commands": ["workbench.action.closeActiveEditor"]},
      {"before": ["<Space>", "Q"], "commands": ["workbench.action.reopenClosedEditor"]},
      {"before": ["<Space>", "e"], "commands": ["workbench.action.quickOpen"]},
      {"before": ["<Space>", "f"], "commands": ["workbench.action.quickOpen"]},
      {"before": ["<Space>", "F"], "commands": ["workbench.action.findInFiles"]},
      {"before": ["<Space>", "s"], "commands": ["workbench.action.showAllSymbols"]},
      {"before": ["<Space>", "S"], "commands": ["workbench.action.showAllSymbols"]},
      {"before": ["<Space>", "t"], "commands": ["workbench.action.terminal.toggleTerminal"]},
      {"before": ["<Space>", "P"], "commands": ["workbench.action.openRecent"]},
      {"before": ["<Space>", "b"], "commands": ["editor.debug.action.toggleBreakpoint"]}
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
      {"before": ["v"], "after": ["$", "h"]},
      {"before": ["<Tab>"], "after": ["%"]}
    ],
    "vim.handleKeys": {
      "<C-f>": false
    },
    "editor.renderWhitespace": "all",
    "editor.lineNumbers": "on",
    "editor.wordWrap": "on",
    "editor.rulers": [80],
    "editor.matchBrackets": "always",
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoClosingBrackets": "always",
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "files.autoSave": "afterDelay",
    "files.backup": false,
    "files.hotExit": "onExit",
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 4,
    "workbench.settings.applyToAllProfiles": [],
    "editor.fontSize": 14,
    "git.autofetch": true,
  }
